{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "target": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "./src/",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
}